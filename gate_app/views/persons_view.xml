<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="gate_app.personlist">
            <field name="name">Person List</field>
            <field name="model">security.gate.persons.line</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="driver_id" string="National ID"/>
                    <field name="driver_name" string="Name"/>
                    <field name="car_number" string="Car Number"/>
                    <field name="person_id" string="ID Copy"  widget="download"/>
                </tree>
            </field>
        </record>
        <!--> Form View <-->
        <record model="ir.ui.view" id="gate_app.persons">
            <field name="name">Person Form</field>
            <field name="model">security.gate.persons.line</field>
            <field name="arch" type="xml">
                <form string="Person Information">
                    <sheet>
                    <group col="2">
                        <group>
                             <field name="driver_id" string="National ID"/>
                             <field name="driver_name" string="Name"/>
                             <field name="car_number" string="Car Number"/>
                         </group>
                         <group>
                             <field name="person_down" string="Download Copy" widget="download" />
                             <field name="person_id" string="ID Copy" widget="image"/>
                         </group>
                         </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Person Kanban View -->
        <record id="persons_kanban_view" model="ir.ui.view">
            <field name="name">persons.line.kanban</field>
            <field name="model">security.gate.persons.line</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="driver_id" string="National ID"/>
                    <field name="driver_name" string="Name"/>
                    <field name="car_number" string="Car Number"/>
                    <field name="person_id" string="ID Copy"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('security.gate.persons.line', 'person_id',record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="driver_name"/>
                                    </strong>
                                <div t-if="record.driver_id.value">
                                        <t t-esc="record.driver_id.value"/>
                                </div>
                                <div t-if="record.car_number.value">
                                        <t t-esc="record.car_number.value"/>
                                </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
                 </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="gate_persons_action_window">
            <field name="name">Persons App window</field>
            <field name="res_model">security.gate.persons.line</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <!-- Persons Menu -->
        <menuitem name="Persons" id="gate_app_menu_1" action="gate_persons_action_window" parent="security_gate_menu_root"/>
    </data>
</odoo>