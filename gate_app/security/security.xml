<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="security_gate_category">
            <field name="name">Security Gate</field>
            <field name="description">Security Gate</field>
            <field name="sequence">10</field>
        </record>
        <record id="security_gate_user_group" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="security_gate_category"/>
        </record>
        <record id="security_gate_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="security_gate_category"/>
            <!--
            the implied ID for the user security group.
            This means that the manager will have access to the user's rights as well
            -->
            <field name="implied_ids" eval="[(4, ref('security_gate_user_group'))]"/>
        </record>


    </data>
</odoo>